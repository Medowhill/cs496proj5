<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22000000">
        <com.group1.team.autodiary.views.GamsungFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0"
            android:text="오늘 당신의 행보"
            android:textSize="40dp"
            android:paddingTop="16dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:showDividers="middle"
                android:divider="@drawable/empty_tall_divider">
                <android.support.v7.widget.CardView
                    android:id="@+id/call_log_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#22000000"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:onClick="showHistory">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin">
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가장 길게 한 통화"/>
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:id="@+id/single_longest_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="없음"
                            android:layout_marginBottom="8dp"/>
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가장 오래 통화한 사람" />
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:id="@+id/longest_call_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="없음"
                            android:layout_marginBottom="8dp"/>
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 대화 시간"
                            android:layout_alignParentBottom="true"/>
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:id="@+id/total_call_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="없음"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/total_spent_money_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#22000000"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:onClick="showHistory">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin">
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="총 사용 금액" />
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:id="@+id/total_spent_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="right"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/most_used_apps_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#22000000"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:onClick="showHistory">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin">
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="가장 많이 사용한 앱"
                            android:gravity="center"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true">
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="1위"
                                    android:layout_marginBottom="16dp"/>
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/first_most_used_app"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="없음" />
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/first_most_used_app_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true">
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2위"
                                    android:layout_marginBottom="16dp"/>
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/second_most_used_app"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="없음" />
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/second_most_used_app_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true">
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="3위"
                                    android:layout_marginBottom="16dp"/>
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/third_most_used_app"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="없음" />
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/third_most_used_app_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/longest_visited_places_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#22000000"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:onClick="showHistory">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin">
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="가장 오래 머무른 장소"
                            android:gravity="center"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true">
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="1위"
                                    android:layout_marginBottom="16dp"/>
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/first_longest_visited_place"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="없음" />
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/first_longest_visited_place_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_alignParentTop="true">
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2위"
                                    android:layout_marginBottom="16dp"/>
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/second_longest_visited_place"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="없음" />
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/second_longest_visited_place_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true">
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="3위"
                                    android:layout_marginBottom="16dp"/>
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/third_longest_visited_place"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="없음" />
                                <com.group1.team.autodiary.views.GamsungFontTextView
                                    android:id="@+id/third_longest_visited_place_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/most_frequently_played_music_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#22000000"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:onClick="showHistory">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin">
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가장 많이 들은 음악" />
                        <com.group1.team.autodiary.views.GamsungFontTextView
                            android:id="@+id/most_frequently_played_music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="없음"
                            android:layout_gravity="right"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>