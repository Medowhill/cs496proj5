<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/diary_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/diary_margin"
            android:visibility="invisible">

            <TextView
                android:id="@+id/diary_textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/diary_image_margin"
                android:textSize="@dimen/diary_textSize_title" />

            <TextView
                android:id="@+id/diary_textView_diary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/diary_lineSpacing"
                android:textSize="@dimen/diary_textSize" />

            <LinearLayout
                android:id="@+id/diary_layout_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/diary_paragraph_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diary_textView_labelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diary_text_label"
                    android:textSize="@dimen/diary_textSize_title" />

                <ImageView
                    android:id="@+id/diary_imageView_labelPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/diary_image_margin"
                    android:layout_marginTop="@dimen/diary_image_margin"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/diary_textView_labelDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/diary_textSize" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diary_layout_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/diary_paragraph_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diary_textView_faceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diary_text_face"
                    android:textSize="@dimen/diary_textSize_title" />

                <ImageView
                    android:id="@+id/diary_imageView_facePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/diary_image_margin"
                    android:layout_marginTop="@dimen/diary_image_margin"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>